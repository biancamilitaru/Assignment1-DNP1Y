@page "/Adults"
@using Data
@using Models
@inject IAdultsData AdultsData

<h3>Adults</h3>

@if (adults == null)
{
    <p>
        <em>Loading...</em>
    </p>
} else if (!adults.Any())
{
    <p>
        <em>No adults item exist. Please add some</em>
    </p>
}
else
{
    <table class = "table">
        <thead>
        <tr>
            <th>Id</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Job title</th>
            <th>Hair color</th>
            <th>Eye color</th>
            <th>Age</th>
            <th>Weight</th>
            <th>Height</th>
            <th>Sex</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Adult item in adults)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.JobTitle.JobTitle</td>
                <td>@item.HairColor</td>
                <td>@item.EyeColor</td>
                <td>@item.Age</td>
                <td>@item.Weight</td>
                <td>@item.Height</td>
                <td>@item.Sex</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private IList<Adult> adults;

    protected override async Task OnInitializedAsync()
    {
        adults = AdultsData.GetAdults();
    }
}